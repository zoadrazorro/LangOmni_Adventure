# Database Configuration
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://langomni_user:your_secure_password_here@localhost:5432/langomni_adventure

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Qdrant Vector DB
QDRANT_URL=http://localhost:6333

# GPU Configuration
GPU_0_ENABLED=true
GPU_1_ENABLED=true
VLLM_GPU_0_URL=http://localhost:8001
VLLM_GPU_1_URL=http://localhost:8002

# vLLM Settings for GPU 0 (World Simulator)
VLLM_GPU_0_MODEL=meta-llama/Llama-3.1-70B-Instruct
VLLM_GPU_0_QUANTIZATION=awq
VLLM_GPU_0_MAX_MODEL_LEN=4096
VLLM_GPU_0_GPU_MEMORY_UTILIZATION=0.90

# vLLM Settings for GPU 1 (NPC Engine - Multi-instance)
VLLM_GPU_1_MODEL=meta-llama/Llama-3.1-8B-Instruct
VLLM_GPU_1_QUANTIZATION=awq
VLLM_GPU_1_MAX_MODEL_LEN=2048
VLLM_GPU_1_GPU_MEMORY_UTILIZATION=0.90
VLLM_GPU_1_TENSOR_PARALLEL_SIZE=1

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=info
CORS_ORIGINS=http://localhost:3000,http://localhost:80

# Game Configuration
MAX_CONCURRENT_PLAYERS=80
ACTION_TIMEOUT=5.0
RATE_LIMIT_PER_PLAYER=4
CACHE_TTL_SECONDS=300

# Monitoring
GRAFANA_PASSWORD=admin
PROMETHEUS_SCRAPE_INTERVAL=15s

# Frontend
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=your_jwt_secret_here_generate_a_secure_one

# Admin Credentials
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeme_in_production
